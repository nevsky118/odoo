---
import { Toaster } from 'sonner'
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
---
<!DOCTYPE html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Форма Обратной Связи</title>
    <link rel="stylesheet" />
  </head>
  <body class="bg-gradient-to-r from-blue-50 to-purple-50 dark:from-gray-800 dark:to-gray-900 text-gray-900 dark:text-gray-100 transition-colors duration-300 min-h-screen flex flex-col">
    <Header />
    <main class="flex-grow p-6">
      <slot />
    </main>
    <Footer />
    <Toaster richColors client:load />
  </body>
</html>